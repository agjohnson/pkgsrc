+all: $(OBJS)
+	$(CC) -o optipng $(LDFLAGS) $(OBJS) -lz `libpng-config --ldflags`
+
+optipng.o:   src/optipng.c
+opngoptim.o: src/opngoptim.c
+opngreduc.o: src/opngreduc.c
